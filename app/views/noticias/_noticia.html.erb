#encoding: utf-8

<div id="novo-noticia" aria-hidden="true" role="dialog" aria-labelledby="meuModal_novo" class="modal" style="display: none;">
  <%= tinymce%>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">&#215;</a>
        <h3 class="modal-title" id="meuModal_novo">Mat√©ria</h3>
      </div>
      <div class="col-md-10"> <%= exibe_erros(@noticia).html_safe if !@noticia.nil? && @noticia.errors.any?%></div>
      <div class="modal-body">
        <%if !@noticia.nil?%>
            <%= form_for @noticia, :html => {:class => 'form-horizontal' } do |f| %>

                <%= render :partial => 'noticias/form',:locals => { :f => f, :role => @role } %>


                <div class="modal-footer">
                  <div class="well well-sm">
                    <a class="btn btn-default" data-dismiss="modal" href="#" id="fechar">Fechar</a>
                    <%= f.submit 'Enviar', :class => 'btn btn-primary' %>
                  </div>
                </div>
            <% end %>
        <% end %>
        <%# end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $( document ).ready(function() {
        $("#addnoticia").click();
    });
</script>