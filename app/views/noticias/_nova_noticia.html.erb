# encoding: utf-8
<%= tinymce%>
<div id="nova-noticia" aria-hidden="true" role="dialog" aria-labelledby="meuModal_novo" class="modal" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">&#215;</a>
        <h3 class="modal-title" id="meuModal_novo">Contato</h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-10"> <%= exibe_erros(@noticia).html_safe if !@noticia.nil? && @noticia.errors.any?%></div>
        </div>
        <p>
          <%= form_for @noticia, :html => {:class => 'form-horizontal' } do |f| %>

              <%= render :partial => 'noticias/form',:locals => { :f => f, :role => @role } %>


            <div class="modal-footer">
              <div class="well well-sm">
                <a class="btn btn-default" data-dismiss="modal" href="#" id="fechar">Fechar</a>
                <%= f.submit 'Enviar', :class => 'btn btn-primary' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
